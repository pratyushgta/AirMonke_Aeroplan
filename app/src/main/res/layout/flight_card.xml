<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/Pantone433PC_BLACK"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/flight_card_flight_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="flight #"
                    android:textAlignment="viewStart"
                    android:textColor="@color/Pantone137C_ORANGE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- First Name and Last Name Side-by-Side -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <!-- Departure TextView -->
                    <TextView
                        android:id="@+id/flight_card_depart"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:text="test"
                        android:textAlignment="center"
                        android:textColor="@color/PiperWhite"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@drawable/baseline_airplane_ticket_24"
                        android:tint="@android:color/white" />

                    <!-- Arrival TextView -->
                    <TextView
                        android:id="@+id/flight_card_arrive"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:text="test"
                        android:textAlignment="center"
                        android:textColor="@color/PiperWhite"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Horizontal LinearLayout for search_extraInfo and search_back -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:background="@color/Pantone2088C_PURPLE"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/flight_card_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="date_pax"
                        android:paddingLeft="10dp"
                        android:textColor="@color/Pantone137C_ORANGE"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/flight_card_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/PiperTeal"
                        android:textColor="@color/PiperWhite"
                        android:text="Book"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
