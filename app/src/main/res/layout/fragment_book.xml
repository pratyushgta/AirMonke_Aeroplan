<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/PiperWhite"
    tools:context=".Main.Trips.BookFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/flight_innerlayout" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Pantone137C_ORANGE">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/PiperTeal"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="2.6sp"
                android:text="Search"
                android:textColor="#ffffff"
                android:textSize="15.4sp" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>