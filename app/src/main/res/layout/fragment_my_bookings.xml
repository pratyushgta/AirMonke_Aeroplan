<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PiperWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main.Trips.MyBookingsFragment">
    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="180dp"
        android:src="@drawable/generic_suitcase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/welcome_account_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953">

        <!-- Sign Up Button -->

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcome_account_signupbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Pantone433PC_BLACK"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="15dp"
            android:text="Log in"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.757"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcome_account_loginbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/PiperWhite"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="15dp"
            android:text="Add trip"
            android:textColor="@color/Pantone433PC_BLACK"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.757"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063"
            app:strokeColor="@color/Pantone433PC_BLACK"
            app:strokeWidth="3dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="313dp"
        android:layout_height="58dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="34dp"
        android:text="You currently have no trips. Keep track of your flights by adding them here."
        android:textAlignment="center"
        android:textColor="@color/Pantone433PC_BLACK"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>