<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PiperWhite"
    android:fillViewport="true"
    tools:context=".Main.Trips.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image View (Center-aligned) -->
        <ImageView
            android:id="@+id/yAccount_logo"
            android:layout_width="188dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginStart="61dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="61dp"
            android:contentDescription="Your Image"
            android:src="@drawable/airmonke_logo_only" />

        <!-- Text View -->
        <androidx.cardview.widget.CardView
            android:id="@+id/yAccount_card0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/Pantone433PC_BLACK"
            app:cardCornerRadius="5dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/yAccount_miles_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="Your Image"
                    android:padding="5dp"
                    android:src="@drawable/monkemiles_logo_d" />

                <TextView
                    android:id="@+id/yAccount_miles_Description1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/Pantone137C_ORANGE"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/yAccount_miles_Description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="frequent flyer miles"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/PiperWhite"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
